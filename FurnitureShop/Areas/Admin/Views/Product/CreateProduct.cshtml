@model Product
@{
    ViewData["Title"] = "Ürün Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">@ViewData["Title"]</div>
    </div>

    <div class="card-body">


        <form action="CreateProduct" method="post">
            <div class="form-group">
                <label asp-for="ImageUrl" class="font-weight-bold"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="ürün görseli url değeri" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold"></label>
                <input asp-for="Name" class="form-control" placeholder="ürün adı" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="font-weight-bold"></label>
                <input type="number" asp-for="Price" class="form-control" placeholder="ürün adı" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="Description" class="font-weight-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="ürün adı"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Ekle</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-danger">İptal</a>

        </form>

    </div>
</div>

